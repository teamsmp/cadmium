---
const anim = {
  old: {
    name: "boxout",
    duration: "0.1s",
    easing: "ease-in",
  },
  new: {
    name: "boxin",
    duration: "0.1s",
    easing: "ease-out",
  },
};

const box = {
  forwards: anim,
  backwards: anim,
};
---

<div class="grid h-screen w-screen items-center sm:place-items-center">
  <div
    class="mx-6 max-h-10/12 overflow-y-auto border border-zinc-400 p-4 text-white backdrop-blur-xs backdrop-brightness-50 sm:w-sm"
    transition:name="mainbox"
    transition:animate={box}
  >
    <div>
      <slot />
    </div>
  </div>
</div>

